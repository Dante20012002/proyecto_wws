---
import { productos } from '../../data/productos';
const { slug } = Astro.params;
const producto = productos.find(p => p.slug === slug);
const notFound = !producto;
---

{notFound ? (
  <section class="min-h-[60vh] flex flex-col items-center justify-center">
    <h1 class="text-3xl font-bold text-red-600 mb-4">Producto no encontrado</h1>
    <a href="/productos" class="text-blue-600 underline">Volver a productos</a>
  </section>
) : (
  <main class="w-full min-h-[60vh] flex flex-col items-center justify-center bg-[#22345a] py-12 px-4">
    <div class="max-w-2xl w-full bg-[#1a2740] rounded-xl shadow-lg overflow-hidden flex flex-col md:flex-row">
      <div class="md:w-1/2 w-full aspect-[4/3] bg-gray-200 flex items-center justify-center">
        <img src={producto.imagen} alt={producto.nombre} class="w-full h-full object-cover" loading="lazy" />
      </div>
      <div class="md:w-1/2 w-full p-8 flex flex-col gap-4 justify-center">
        <h1 class="text-white text-2xl md:text-3xl font-bold mb-2">{producto.nombre}</h1>
        <p class="text-gray-200 text-base md:text-lg mb-4">{producto.descripcion}</p>
        <a href="/productos" class="inline-block mt-4 bg-[#A9C6DF] text-[#06214E] font-bold px-6 py-2 rounded shadow hover:bg-[#06214E] hover:text-white transition">Volver a productos</a>
      </div>
    </div>
  </main>
)} 