---
interface Props {
  socialLinks: Array<{
    icon: string;
    href: string;
    alt: string;
  }>;
  footerLinks: Array<{
    title: string;
    links: Array<{
      text: string;
      href: string;
    }>;
  }>;
}

const { socialLinks, footerLinks } = Astro.props;
---

<footer class="w-full bg-[#06214E] text-white pt-12 pb-6">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex flex-col md:flex-row gap-8 md:gap-16 justify-between mb-8">
      <div class="flex-1 mb-8 md:mb-0">
        <img src="/assets/logo-footer.svg" alt="WWS Logo" class="mb-4 h-12" />
        <p class="mb-4 text-[#EAEAEA]">Transformando ideas en soluciones digitales innovadoras</p>
        <div class="flex gap-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:opacity-80"
              >
                <img src={link.icon} alt={link.alt} class="w-7 h-7" />
              </a>
            ))
          }
        </div>
      </div>
      <div class="flex-[2] grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          footerLinks.map((section) => (
            <div>
              <h3 class="font-bold mb-4 text-[#EAEAEA]">{section.title}</h3>
              <ul class="space-y-2">
                {section.links.map((link) => (
                  <li>
                    <a href={link.href} class="hover:text-[#EAEAEA] transition text-sm">
                      {link.text}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
    <div class="border-t border-[#EAEAEA] pt-4 text-center text-xs text-[#EAEAEA]">
      &copy; {new Date().getFullYear()} WWS. Todos los derechos reservados.
    </div>
  </div>
</footer>

