---
interface Props {
  socialLinks: Array<{
    icon: string;
    href: string;
    alt: string;
  }>;
  footerLinks: Array<{
    title: string;
    links: Array<{
      text: string;
      href: string;
    }>;
  }>;
}

const { socialLinks, footerLinks } = Astro.props;
---

<footer class="bg-[#4F6E6E] text-white py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Logo y redes -->
      <div class="text-center md:text-left">
        <svg class="h-12 mb-4">
          <use href="/assets/sprite.svg#logo-splash" />
        </svg>
        <p class="mb-4 text-[#EAEAEA]">Transformando ideas en soluciones digitales innovadoras</p>
        <div class="flex gap-4 justify-center md:justify-start">
          {socialLinks.map((link) => (
            <a href={link.href} target="_blank" rel="noopener noreferrer" class="hover:opacity-80">
              <svg class="w-7 h-7">
                <use href={link.icon} />
              </svg>
            </a>
          ))}
        </div>
      </div>
      <!-- Enlaces útiles -->
      <div>
        <h3 class="font-bold mb-4 text-[#EAEAEA]">Enlaces</h3>
        <ul class="space-y-2">
          {footerLinks[0]?.links.map((link) => (
            <li>
              <a href={link.href} class="hover:text-[#EAEAEA] transition text-sm">
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <!-- Contacto -->
      <div>
        <h3 class="font-bold mb-4 text-[#EAEAEA]">Contacto</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <span class="font-semibold">Email:</span> contacto@wws.com
          </li>
          <li>
            <span class="font-semibold">Teléfono:</span> +57 123 456 7890
          </li>
          <li>
            <span class="font-semibold">Dirección:</span> Calle 123 #45-67, Bogotá, Colombia
          </li>
        </ul>
      </div>
    </div>
    <div class="border-t border-[#EAEAEA] pt-4 text-center text-xs text-[#EAEAEA] mt-8">
      &copy; {new Date().getFullYear()} WWS. Todos los derechos reservados.
    </div>
  </div>
</footer>

