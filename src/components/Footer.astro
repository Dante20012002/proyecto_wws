---
interface Props {
  socialLinks: Array<{
    icon: string;
    href: string;
    alt: string;
  }>;
  footerLinks: Array<{
    title: string;
    links: Array<{
      text: string;
      href: string;
    }>;
  }>;
}

const { socialLinks, footerLinks } = Astro.props;
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-main">
      <div class="footer-brand">
        <img src="/logo.svg" alt="WWS Logo" class="footer-logo" />
        <p class="footer-description">
          Transformando ideas en soluciones digitales innovadoras
        </p>
        <div class="social-links">
          {socialLinks.map((link) => (
            <a href={link.href} target="_blank" rel="noopener noreferrer">
              <img src={link.icon} alt={link.alt} />
            </a>
          ))}
        </div>
      </div>
      
      <div class="footer-links">
        {footerLinks.map((section) => (
          <div class="footer-section">
            <h3>{section.title}</h3>
            <ul>
              {section.links.map((link) => (
                <li>
                  <a href={link.href}>{link.text}</a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {new Date().getFullYear()} WWS. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-background-dark);
    color: var(--color-text-light);
    padding: 4rem 2rem 2rem;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-brand {
    max-width: 300px;
  }

  .footer-logo {
    margin-bottom: 1rem;
  }

  .footer-description {
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-links img {
    width: 24px;
    height: 24px;
  }

  .footer-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .footer-section h3 {
    margin-bottom: 1.5rem;
    font-size: 1.2rem;
  }

  .footer-section ul {
    list-style: none;
    padding: 0;
  }

  .footer-section li {
    margin-bottom: 0.8rem;
  }

  .footer-section a {
    color: var(--color-text-light);
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-section a:hover {
    color: var(--color-primary);
  }

  .footer-bottom {
    border-top: 1px solid var(--color-border);
    padding-top: 2rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: 1fr;
    }
  }
</style> 