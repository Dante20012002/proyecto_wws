    }" x-init="scrollEl = $refs.carousel" class="relative">
      <button @click="prev" class="hidden md:flex absolute left-0 top-1/2 -translate-y-1/2 z-10 w-10 h-10 items-center justify-center rounded-full bg-[#06214E] text-white shadow hover:bg-[#00112a] transition"><span class="text-2xl">&#60;</span></button>
