---
interface Props {
  links: Array<{
    text: string;
    href: string;
  }>;
}

const { links } = Astro.props;
---

<nav class="navbar">
  <div class="navbar-container">
    <a href="/" class="logo">
      <img src="/logo.svg" alt="WWS Logo" />
    </a>
    <ul class="nav-links">
      {links.map((link) => (
        <li>
          <a href={link.href}>{link.text}</a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
  .navbar {
    width: 100%;
    padding: 1rem 2rem;
    background: var(--color-background);
  }

  .navbar-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--color-text);
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .nav-links a:hover {
    color: var(--color-primary);
  }
</style> 