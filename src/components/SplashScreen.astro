---
import { Image } from 'astro:assets';
---

<div
  class="fixed inset-0 w-full h-full bg-[#06214E] flex justify-center items-center z-50 animate-fadeOut"
>
  <div class="text-center px-4">
    <img src="/assets/logo-splash.svg" alt="WWS Logo" class="w-48 md:w-64 lg:w-80 mx-auto mb-6" />
    <h1 class="text-2xl md:text-4xl lg:text-5xl font-bold text-[#EAEAEA] px-4">
      Soluciones Que Trabajan Por El Agua Del Futuro
    </h1>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    setTimeout(() => {
      const splashScreen = document.querySelector('.animate-fadeOut');
      if (splashScreen) {
        splashScreen.remove();
      }
    }, 3000);
  });
</script>

<style>
  @keyframes fadeOut {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
      visibility: hidden;
    }
  }

  .animate-fadeOut {
    animation: fadeOut 2s ease-in-out forwards;
    animation-delay: 1s;
  }
</style>

