{
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "es5",
  "printWidth": 100,
  "bracketSpacing": true,
  "arrowParens": "always",
  "endOfLine": "auto",
  "plugins": ["prettier-plugin-astro"],
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    },
    {
      "files": "*.svg",
      "options": {
        "parser": "html",
        "htmlWhitespaceSensitivity": "strict",
        "singleAttributePerLine": true
      }
    }
  ],
  "attributeGroups": [
    "^v-",
    "^@",
    "^:",
    "^[a-z]",
    "^[A-Z]",
    "^[0-9]"
  ],
  "attributeSort": "ASC"
}
